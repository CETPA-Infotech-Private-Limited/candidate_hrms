    <script>
        // Function to check if the current URL matches the specified URL
        function isCurrentUrl(url) {
            return window.location.href.indexOf(url) > -1;
        }

        // Function to apply a class to the body based on the current URL
        function applyClassToBody() {
            if (isCurrentUrl("/Approval/TourApproval")) {
                document.body.classList.add("special-url");
            }

            if (isCurrentUrl("/Finance/AdvanceApproval")) {
                document.body.classList.add("special-url");
            }
            if (isCurrentUrl("/Finance/AdvanceApprovalBulkDownload")) {
                document.body.classList.add("special-url");
            }
            if (isCurrentUrl("/Finance/AdvanceApprovalBankingBulkDownload")) {
                document.body.classList.add("special-url");
            }
            if (isCurrentUrl("/Finance/ApproveClaim")) {
                document.body.classList.add("special-url");
            }
            if (isCurrentUrl("/Finance/ApproveClaimFinanceProcessing")) {
                document.body.classList.add("special-url");
            }
        }

        // Call the function when the page loads
        applyClassToBody();

        document.addEventListener('DOMContentLoaded', function () {
            // Add a click event listener to elements with class "admin-link"
            var adminLinks = document.querySelectorAll('.admin-link');

            adminLinks.forEach(function (adminLink) {
                adminLink.addEventListener('click', function () {
                    // Remove the "active" class from elements with class "nav-link"
                    var navLinks = document.querySelectorAll('.nav-item');
                    navLinks.forEach(function (navLink) {
                        navLink.classList.remove('active');
                    });
                });
            });
        });


    </script>

